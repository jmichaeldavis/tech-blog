<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@200&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <header class="display-flex justify-space-between align-center p-2">
      <div id="page-title-container">
        <h1 id="page-title">Tech Blog</h1>
      </div>
      {{#if logged_in}}
        <nav>
          <button id="home">Home</button>
          <button id="dashboard">Dashboard</button>
          <button id="logout">Logout</button>
        </nav>
        <h2 id="welcome-message">Welcome, {{user_name}}</h2>
      {{/if}}
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>

    {{/if}}
  </body>

</html>